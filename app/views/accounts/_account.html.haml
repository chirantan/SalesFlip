.item
  = link_to account.name, account, :id => account.name.downcase.gsub(/\s/, '-').gsub(/\w/, '')
  .actions
    = link_to t('edit'), [:edit, account], :id => "edit_#{account.name.to_dom_id}"
    - simple_form_for account, :html => { :method => :delete } do |form|
      = form.button :submit, t('delete'), :id => "delete_#{account.name.to_dom_id}"
