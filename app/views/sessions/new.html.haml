%h2 Sign In

- simple_form_for resource_name, resource, :url => session_path(resource_name) do |f|
  %fieldset
    = f.input :email, :grid => '100'
    = f.input :password, :grid => '100'
    - if devise_mapping.rememberable?
      .boolean
        = f.check_box :remember_me
        = f.label :remember_me, "Remember Me"
    .clear

  .act
    = f.submit "Sign in"
    = render :partial => "shared/devise_links"
