!!!
%html
  %head
    = javascript_include_tag 'right.js'
    = stylesheet_link_tag 'compiled/application.css'
    = title_tag 'Lean CRM'
    = description_tag 'An unobtrusive, slim CRM built with MongoMapper and RightJS'
    = keywords_tag 'lean crm unobtrusive mongomapper rightjs'
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type" }
  - body do
    #header
      .pad
        %h1
          %strong.logo LeanCRM:
          = COMPANY_NAME
        - if current_user
          #menus
            %p
              = "Welcome, #{current_user.username}"
              |
              = link_to t('my_profile'), profile_path, :id=>'profile'
              |
              = link_to t('logout'), destroy_user_session_path, :id => 'logout'

            %ul#navigation
              %li.first= link_to t('dashboard'), root_path, :class=> active_if(controller_is('pages'))
              %li= link_to t('tasks'), tasks_path, :class=> active_if(controller_is('tasks'))
              %li= link_to t('leads'), leads_path, :class=> active_if(controller_is('leads'))
              %li= link_to t('accounts'), accounts_path, :id => 'accounts', :class=> active_if(controller_is('accounts'))
              %li= link_to t('contacts'), contacts_path, :id => 'contacts', :class=> active_if(controller_is('contacts'))                                    
    #content
      .pad
        - if flash[:notice]
          .flash#notice= flash[:notice]
        - if flash[:error]
          .flash#error= flash[:error]
        #main{:class=> @main_class }
          .pad= yield
        #sidebar= yield :sidebar
